{
  "name": "tricore-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev:frontend": "pnpm --filter @tricore/frontend dev",
    "dev:backend": "pnpm --filter @tricore/backend dev",
    "dev:admin": "pnpm --filter @tricore/admin dev",
    "lint": "pnpm -r --parallel lint",
    "test": "pnpm -r --stream test",
    "format": "pnpm -r format",
    "deploy:frontend": "pnpm --filter @tricore/frontend deploy",
    "deploy:backend": "pnpm --filter @tricore/backend deploy",
    "deploy:admin": "pnpm --filter @tricore/admin build && pnpm --filter @tricore/admin exec wrangler pages deploy dist --project-name=admin-web --branch=cloudflare-deploy",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
